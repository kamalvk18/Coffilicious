<%- include("../partials/header") %> 
<div class="row justify-content-center" style="margin-top:80px;">
	<h1 class="col-md-12 text-center" >
	Add New Review to <%= coffee.name %>
	</h1>
	<div class="col-xs-12 col-md-8 col-lg-7">
	<form action="/menu/<%= coffee._id%>/review" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="review[text]" placeholder="Leave a Review" >
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="review[author]" placeholder="Your sweet name">
		</div>
		<div class="form-group">
		<button class="btn btn-md btn-block btn-primary"type="submit">
			Submit
		</button>
		</div>
	</form>
	</div>
</div>

<%- include("../partials/header") %> 